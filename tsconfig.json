{
  "compilerOptions": {
    "outDir": "build",
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "src",
    "paths": {
      "utils": ["utils"],
      "@constants": ["constants"],
      "@config": ["json/config.json"],
      "@json/*": ["json/*"],
      "@commands/*": ["commands/*"],
      "@controllers/*": ["controllers/*"]
    }
  },
  "display": "Recommended",
  "ts-node": {
    "files": true
  }
}
